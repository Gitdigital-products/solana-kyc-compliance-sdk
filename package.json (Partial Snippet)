{
  "name": "solana-kyc-compliance-sdk",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./core-api": {
      "types": "./dist/core-api/index.d.ts",
      "import": "./dist/esm/core-api/index.js"
    },
    "./integration-helpers": {
      "types": "./dist/integration-helpers/index.d.ts",
      "import": "./dist/esm/integration-helpers/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "build:types": "tsc --project tsconfig.types.json",
    "build:wasm": "wasm-pack build --target web --out-dir dist/wasm" // If you have Rust/WASM code
  }
}