name: CI Build & Test

on:
  push:
    branches: ["main", "dev", "feat/**"]
  pull_request:
    branches: ["main"]

jobs:
  build:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        node-version: [20.x]
        rust: [stable]

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ matrix.node-version }}
          cache: "npm"

      - name: Setup Rust
        uses: dtolnay/rust-toolchain@stable

      - name: Install WASM target
        run: rustup target add wasm32-unknown-unknown

      - name: Install dependencies
        run: npm ci --prefix server-signer

      - name: Build signer docker image
        run: docker build -t solana-kyc-signer ./server-signer

      - name: Run signer lint
        run: npx eslint server-signer

      - name: Build Rust workspace
        run: cargo build --workspace --all-targets --release

      - name: Run Rust tests
        run: cargo test --workspace --all --release

      - name: Build WASM SDK
        run: |
          cd sdk/wasm
          wasm-pack build --target web

      - name: Run type-check on TypeScript SDK
        run: npx tsc --noEmit --project sdk/typescript/tsconfig.json

      - name: Upload build artifacts
        uses: actions/upload-artifact@v4
        with:
          name: wasm-sdk
          path: sdk/wasm/pkg/