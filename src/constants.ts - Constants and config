import { PublicKey } from '@solana/web3.js';

/**
 * Default program ID (can be overridden)
 */
export const DEFAULT_PROGRAM_ID = new PublicKey(
  'KycCompliance111111111111111111111111111111111'
);

/**
 * Supported country codes (ISO 3166-1 alpha-2)
 */
export const SUPPORTED_COUNTRIES = [
  'US', // United States
  'GB', // United Kingdom
  'DE', // Germany
  'FR', // France
  'JP', // Japan
  'CA', // Canada
  'AU', // Australia
  'SG', // Singapore
  'CH', // Switzerland
  'NL', // Netherlands
];

/**
 * High-risk countries (restricted by default)
 */
export const HIGH_RISK_COUNTRIES = [
  'RU', // Russia
  'KP', // North Korea
  'IR', // Iran
  'SY', // Syria
  'CU', // Cuba
];

/**
 * KYC level descriptions
 */
export const KYC_LEVEL_DESCRIPTIONS = {
  0: 'Unverified',
  1: 'Basic Verification',
  2: 'Enhanced Verification',
  3: 'Institutional Verification',
};

/**
 * Investor type descriptions
 */
export const INVESTOR_TYPE_DESCRIPTIONS = {
  0: 'Individual',
  1: 'Institution',
