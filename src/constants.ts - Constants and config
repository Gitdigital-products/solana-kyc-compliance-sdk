  KYCLevelTooLow: 11,
};

/**
 * Default compliance policy
 */
export const DEFAULT_COMPLIANCE_POLICY = {
  requireKYCForTransfer: true,
  allowAnonymousSender: false,
  allowAnonymousReceiver: false,
  maxTransferAmount: 1_000_000_000, // 1 SOL in lamports
  minKYCLevel: 1, // Basic verification
  supportedCountries: SUPPORTED_COUNTRIES,
  restrictedCountries: HIGH_RISK_COUNTRIES,
  isActive: true,
  requireAccreditation: false,
  maxWalletsPerInvestor: 5,
};

/**
 * PDAs seeds
 */
export const PDA_SEEDS = {
  COMPLIANCE_REGISTRY: Buffer.from('compliance-registry'),
  POLICY_CONFIG: Buffer.from('policy-config'),
  INVESTOR_RECORD: (wallet: PublicKey) => 
    Buffer.concat([Buffer.from('investor-record'), wallet.toBuffer()]),
  ADMIN_AUTHORITY: Buffer.from('admin-authority'),
  TRANSFER_HOOK: Buffer.from('transfer-hook'),
  PERMANENT_DELEGATE: Buffer.from('permanent-delegate'),
};

