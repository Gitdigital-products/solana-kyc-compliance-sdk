  NotRegistered: 2,
  PolicyViolation: 3,
  InvalidInstruction: 4,
  NotInitialized: 5,
  InvalidPolicy: 6,
  TransferNotAllowed: 7,
  WalletFrozen: 8,
  AccountFrozen: 9,
